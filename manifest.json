{
  "manifest_version": 3,
  "name": "LeetCode Helper",
  "version": "1.0",
  "description": "Export LeetCode company questions to CSV",
  "permissions": [
    "cookies",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Helper"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
